<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage
    xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:animations="clr-namespace:Rg.Plugins.Popup.Animations;assembly=Rg.Plugins.Popup"
    mc:Ignorable="d"
             x:Class="MaxVonGrafKftMobile.Popups.AskForLogin">
    <pages:PopupPage.Animation>
        <animations:ScaleAnimation
           PositionIn="Center"
            PositionOut="Center"
            ScaleIn="1.2"
            ScaleOut="0.8"
            DurationIn="400"
            DurationOut="300"
            EasingIn="SinOut"
            EasingOut="SinIn"
            HasBackgroundAnimation="True"/>
    </pages:PopupPage.Animation>
    <Frame BackgroundColor="{StaticResource popUpBackground}"
           VerticalOptions="CenterAndExpand"
           HorizontalOptions="Fill"
           BorderColor="Transparent"
           CornerRadius="20"
           Padding="15,5,15,15"
           Margin="20,20,20,20">
        <ScrollView>
            <StackLayout BackgroundColor="Transparent">
                <Label Text="LOG-IN"
                        VerticalOptions="End" 
                        HorizontalOptions="CenterAndExpand"
                       FontSize="Subtitle"
                       FontAttributes="Bold"
                       TextColor="{StaticResource MaxVonBlack}"
                       Margin="0,10,0,0"/>
                <BoxView BackgroundColor="{StaticResource Black}"
                         HeightRequest="1"
                         HorizontalOptions="Fill"
                         VerticalOptions="Start"></BoxView>

                <Label x:Name="contentText"
                       Margin="0,30,0,10"
                       FontSize="Small"
                       TextColor="{StaticResource MaxVonBlack}"
                       HorizontalOptions="Center">You want to log-in before go to Home page.</Label>

                <Grid HorizontalOptions="Fill"
                              Margin="10,10,10,10"
                              ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button BackgroundColor="{StaticResource MaxVonGray}"
                                    Text="Cancel"
                                    TextColor="{StaticResource MaxVonWhite}"
                                    BorderWidth="0"
                                    x:Name="cancelBtn"
                                    HeightRequest="30"
                                    Grid.Row="0"
                                    Grid.Column="0"
                            Padding="0"
                             Clicked="CancelBtn_Clicked"></Button>

                    <Button BackgroundColor="{StaticResource MaxVonYellow}"
                                    Text="Log-in"
                                    TextColor="{StaticResource MaxVonWhite}"
                                    BorderWidth="0"
                                    x:Name="loginBtn"
                                    HeightRequest="30"
                                    Grid.Row="0"
                                    Grid.Column="1"
                            Padding="0"
                            Clicked="LoginBtn_Clicked"></Button>
                </Grid>
            </StackLayout>
        </ScrollView>
    </Frame>

</pages:PopupPage>